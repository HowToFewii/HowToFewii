class LightningSound {

  /* Compute the distance to a lightning, 
  the sound moves at 1100 feet/second and
  342 meters/second. It took 7.2 seconds 
  to hear the lightning. Show the answer in 
  Miles and in Kilometers.*/
	
  public static void main(String[] args) {
    double distmiles;
    double distkilometers;
    double seconds;
		
    seconds = 7.2; // INPUT
    distmiles = seconds * 1100;
    distkilometers = seconds * 342;

    System.out.println(
      "The lightning is: " + (distmiles / 5280) + " miles away !"
    );
    System.out.println(
      "The lightning is: " + (distkilometers / 1000) + " kilometers away !"
    );
  }
}
